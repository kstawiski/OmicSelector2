# Database Configuration
DATABASE_URL=postgresql://omicselector:your-password-here@localhost:5432/omicselector2
DB_ECHO=false  # Set to true for SQL query logging

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Security
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false  # Set to true for development

# S3/MinIO Configuration
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
AWS_ENDPOINT_URL=http://localhost:9000
AWS_REGION=us-east-1
S3_BUCKET_NAME=omicselector2

# MLflow Configuration
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_BACKEND_STORE_URI=postgresql://omicselector:your-password-here@localhost:5432/mlflow
MLFLOW_ARTIFACT_ROOT=s3://mlflow-artifacts

# Celery Configuration
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=["json"]
CELERY_TIMEZONE=UTC
CELERY_ENABLE_UTC=true

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json or text

# Feature Selection Defaults
DEFAULT_CV_FOLDS=5
DEFAULT_N_FEATURES=100
DEFAULT_STABILITY_THRESHOLD=0.7
DEFAULT_N_BOOTSTRAPS=100

# Training Defaults
DEFAULT_BATCH_SIZE=32
DEFAULT_EPOCHS=100
DEFAULT_LEARNING_RATE=0.001
DEFAULT_EARLY_STOPPING_PATIENCE=10

# Resource Limits
MAX_UPLOAD_SIZE_MB=5000
MAX_CONCURRENT_JOBS_PER_USER=5
MAX_FEATURES_IN_DATASET=100000
MAX_SAMPLES_IN_DATASET=100000

# GPU Configuration (if available)
CUDA_VISIBLE_DEVICES=0
PYTORCH_CUDA_ALLOC_CONF=max_split_size_mb:512

# Environment
ENVIRONMENT=development  # development, staging, production
DEBUG=true  # Set to false in production

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# Data Paths
DATA_DIR=/data/omicselector2
CACHE_DIR=/tmp/omicselector2/cache
TEMP_DIR=/tmp/omicselector2/temp

# External Services (Optional)
SENTRY_DSN=  # For error tracking
SLACK_WEBHOOK_URL=  # For notifications
WEIGHTS_AND_BIASES_API_KEY=  # For experiment tracking
